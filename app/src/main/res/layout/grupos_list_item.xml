<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <TextView
        android:id="@+id/nombreGrupoList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NombreGrupo"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_below="@id/nombreGrupoList"
        android:id="@+id/modalidad_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modalidad"
        android:textSize="14sp"/>
    <TextView
        android:layout_toRightOf="@+id/modalidad_list"
        android:layout_below="@+id/nombreGrupoList"
        android:layout_marginLeft="15sp"
        android:id="@+id/nivel_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel"
        android:textSize="14sp"/>

    <TextView
        android:layout_toRightOf="@+id/nivel_list"
        android:layout_below="@+id/nombreGrupoList"
        android:layout_marginLeft="15sp"
        android:id="@+id/tam_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TamaÃ±o"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/unirse_list"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse \nal grupo"
        android:textSize="18sp"
        android:gravity="center_horizontal" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaParticipantes">

    <Button
        android:id="@+id/botonAtrasParticipantes"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/abc_vector_test"
        app:backgroundTint="@color/azulOscuro"
        app:srcCompat="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/textViewListaParticipantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/botonAtrasParticipantes"
        android:text="Lista de Participantes: "
        android:textSize="28dp"
        android:textColor="@color/azulOscuro"/>

    <TextView
        android:id="@+id/textViewCorreos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewListaParticipantes"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="NÂº   Correo\n--------------------------------------------\n"
        android:textSize="16dp"
        android:textColor="@color/black"/>
</RelativeLayout>
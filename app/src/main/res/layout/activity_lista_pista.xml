<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaPistaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/atrasListaPistabutton"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/abc_vector_test"
                app:backgroundTint="@color/azulOscuro"
                app:srcCompat="@drawable/abc_vector_test" />

            <TextView
                android:id="@+id/nombreEstacionTextView"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Nombre EstaciÃ³n"
                android:textSize="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/nombrePista1Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:text="Nombre Pista #1"
                        app:backgroundTint="@color/azul" />

                    <Button
                        android:id="@+id/nombrePista2Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:text="Nombre Pista #2"
                        app:backgroundTint="@color/azul" />

                    <Button
                        android:id="@+id/nombrePista3Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:text="Nombre Pista #3"
                        app:backgroundTint="@color/azul" />

                    <Button
                        android:id="@+id/nombrePista4Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:text="Nombre Pista #4"
                        app:backgroundTint="@color/azul" />

                    <Button
                        android:id="@+id/nombrePista5Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:padding="20dp"
                        android:text="Nombre Pista #5"
                        app:backgroundTint="@color/azul" />

                </LinearLayout>
            </ScrollView>
        </TableRow>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
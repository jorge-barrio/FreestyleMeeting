<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/mi_reserva_fecha_MisReservasList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserva"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/idGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_below="@+id/mi_reserva_fecha_MisReservasList"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <TextView
                android:id="@+id/estacion_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estacion:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/estacion_MisReserasList"
                android:layout_toRightOf="@+id/estacion_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">
            <TextView
                android:id="@+id/pack_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pack:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/pack_MisReserasList"
                android:layout_toRightOf="@+id/pack_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>
        </RelativeLayout>

    <GridLayout
        android:id="@+id/idGrid2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_below="@+id/idGrid"
        android:layout_marginTop="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <TextView
                android:id="@+id/precio_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/precio_MisReserasList"
                android:layout_toRightOf="@+id/precio_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <TextView
                android:id="@+id/altura_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/altura_MisReserasList"
                android:layout_toRightOf="@+id/altura_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <TextView
                android:id="@+id/peso_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peso:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/peso_MisReserasList"
                android:layout_toRightOf="@+id/peso_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <TextView
                android:id="@+id/talla_pie_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Talla pie:"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/talla_pie_MisReserasList"
                android:layout_toRightOf="@+id/talla_pie_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>

        </RelativeLayout>
    </GridLayout>

        <RelativeLayout
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/correo_tienda_title_MisReserasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email tienda:"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/correo_tienda_MisReserasList"
                android:layout_toRightOf="@+id/correo_tienda_title_MisReserasList"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="14sp"/>
        </RelativeLayout>
    </GridLayout>
</RelativeLayout>